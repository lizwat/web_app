<!doctype html>
<html>

<head>
    <title>Register Page</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 100px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> Register</h1>

            <!-- LOGIN FORM -->
            <form action="/auth/register" method="POST">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" class="form-control" placeholder="Ron" name="fName" id="fName" required>
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" class="form-control" placeholder="Weasley" name="lName" id="lName" required>
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" placeholder="abc123" name="username" id="username" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" placeholder="abc123@hogwarts.com" name="email" id="email" required>
                </div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" placeholder="123-456-7890" name="phone" id="phone" required>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                </div>
                <!--Selector-->
                <div class="form-group">
                    <label>Grade</label>
                    <br>
                    <select id="grade" name="grade">
                        <option value="Freshman">freshman</option>
                        <option value="Sophomore">Sophomore</option>
                        <option value="Junior">Junior</option>
                        <option value="Senior">Senior</option>
                        <option value="Graduate">Graduate</option>
                    </select>
                </div>

              
                <!-- Checkbox-->
                <div class="form-group row">
                    <div class="col-md-6 offset-md-4">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="tutor"> Register as Tutor
                            </label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-info btn-lg">Register</button>
            </form>

            <hr>

            <p>Already have an account? <a href="/login">Login</a></p>
            <p>Or go <a href="/">home</a>.</p>

        </div>
    </div>
</body>

</html>