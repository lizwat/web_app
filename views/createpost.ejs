<!doctype html>
<html>

<head>
    <title>Create Post</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<%- include('header') -%>

<body>
    <div class="container">
        <div class="col-md-8 col-md-offset-2">

            <h1>Create Post</h1>

            <!-- create post FORM -->
            <form action="/createpost" method="POST">
                <div class="form-group">
                    <label for="class">Class <span class="require">*</span> </label>
                    <input type="text" class="form-control" name="class" id="class" />
                </div>
                <div class="form-group">
                    <label for="topic">Topic <span class="require">*</span></label>
                    <input type="text" class="form-control" name="topic" id="topic">
                </div>

                <div class="form-group">
                    <label for="description"> Description</label>
                    <textarea rows="5" input type="text" class="form-control" name="description"></textarea>
                </div>

                <div class="form-group">
                    <p><span class="require">*</span> - required fields</p>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-primary">
                        Create Post
                    </button>
                    <button class="btn btn-default">
                        Cancel
                    </button>
                </div>

            </form>
        </div>
    </div>
</body>

</html>

<style>
    .require {
        color: #666;
    }

    label small {
        color: #999;
        font-weight: normal;
    }
</style>