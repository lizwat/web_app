<!doctype html>
<html>

<head>
    <title>Create Post</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>  
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
</head>

<%- include('header') -%>

<style>
    body{
       font-family: 'Poppins', sans-serif;
       background-color: lightblue;
    }

   .require {
       color: #666;
   }

   label small {
       color: #999;
       font-weight: normal;
   }
   
</style>

<body>
        <div class="col-md-8 col-md-offset-2">

            <h1>Create Post</h1>

            <!-- create post FORM -->
            <form action="/createpost" method="POST">
                <div class="form-group">
                    <label for="class">Class <span class="require">*</span> </label>
                    <input type="text" class="form-control" name="class" id="class" />
                </div>
                <div class="form-group">
                    <label for="topic">Topic <span class="require">*</span></label>
                    <input type="text" class="form-control" name="topic" id="topic">
                </div>

                <div class="form-group">
                    <label for="description"> Description</label>
                    <textarea rows="5" input type="text" class="form-control" name="description"></textarea>
                </div>

                <div class="form-group">
                    <p><span class="require">*</span> - required fields</p>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-primary">
                        Create Post
                    </button>
                    <button class="btn btn-default">
                        Cancel
                    </button>
                </div>

            </form>
    
    </div>
</body>

</html>
