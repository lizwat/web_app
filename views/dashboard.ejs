<%- include('header') -%>

<style>
   .card {
    display: block;
    margin-left: auto;
    margin-right: auto;
   }

   h1{
    text-align: center;
    font-family: 'Poppins', sans-serif;
   }

   body{
    background-color: lightblue;
    font-family: 'Poppins', sans-serif;
   }
</style>

<!-- TABLE HEADER -->
<body>

    <h1><b>Posts</b></h1>

    <%postList.forEach(post => {%>
        <div class="card border-primary mb-3"  style="max-width: 90rem; margin: top 10px;">
            <div class="card-header text-primary">
               <b> <%= post.class %> â€” <%= post.topic %></b>
            </div>
            <div class="card-body">
              <p class="card-text"><%= post.description %></p>
              <footer class="blockquote-footer">user: <%= post.usertext %></footer>
              <a href="/replypost"  class="btn btn-outline-primary"name="replypost" >Comment </a>
            </div>
          </div>

    <%})%>


</body>

</html>



